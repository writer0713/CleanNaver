{
    "manifest_version": 2,
    "name": "Clean Naver",
    "version": "1.0.2",
    "description": "네이버 뉴스에서 기분을 언짢게 하는 댓글을 숨겨줍니다.",
    "icons": {
        "128": "src/assets/img/icon128.png",
        "48": "src/assets/img/icon48.png",
        "16": "src/assets/img/icon16.png"
    },
    "browser_action": {
        "default_icon": "src/assets/img/icon16.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*.news.naver.com/*",
                "http://entertain.naver.com/*"
            ],
            "js": [
                "dist/bundle.js"
            ],
            "css": ["src/css/app.css"]
        }
    ]
}